{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "static resources for MC server",
    "Parameters": {
        "VPCID": {
            "Type": "String",
            "Description": "VPC to deploy to",
            "Default": "vpc-01de1a0f719d5ca22"
        },
        "PubSBT": {
            "Type": "String",
            "Description": "Public subnet to deploy Minecraft server to",
            "Default": "subnet-0229326e822803245"
        }
    },
    "Mappings": {

    },
    "Conditions": {

    },
    "Resources": {
        "MCEBS": {
            "Type": "AWS::EC2::Volume",
            "Properties": {
                "Encrypted": "true",
                "KmsKeyId": "alias/minecraft-kms",
                "Size": "8",
                "AvailabilityZone": {"Fn::Sub": "${AWS::Region}a"},
                "Tags": [
                    {"Key": "minecraft-server", "Value": ""},
                    {"Key": "Name", "Value": "minecraft-ebs"}
                ]
            }
        },
        "MCENI": {
            "Type": "AWS::EC2::NetworkInterface",
            "DependsOn": ["MCAppSG", "MGMTSG", "WEBSG"],
            "Properties": {
                "Description": "Static ENI for Minecraft",
                "SubnetId": {"Ref": "PubSBT"},
                "SourceDestCheck": "true",
                "GroupSet": [
                    {"Ref": "MCAppSG"},
                    {"Ref": "WEBSG"}                
                ],
                "Tags": [
                    {"Key": "minecraft-server", "Value": ""},
                    {"Key": "Name", "Value": "minecraft-eni"}
                ]
            }
        },
        "MCEIP": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "Tags": [
                    {"Key": "minecraft-server", "Value": ""},
                    {"Key": "Name", "Value": "minecraft-eip"}
                ]            
            }
        },
        "MCEIPA": {
            "Type": "AWS::EC2::EIPAssociation",
            "DependsOn": ["MCEIP", "MCENI"],
            "Properties": {
                "AllocationId": {"Fn::GetAtt" : [ "MCEIP", "AllocationId" ]},
                "NetworkInterfaceId": {"Ref": "MCENI"}
            }
        },
        "MCAppSG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "SG for Minecraft server",
                "GroupName": "minecraft-sg",
                "VpcId": {"Ref": "VPCID"},
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "25565",
                        "ToPort": "25565",
                        "IpProtocol": "tcp"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "25565",
                        "ToPort": "25565",
                        "IpProtocol": "udp"
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "127.0.0.1/32",
                        "IpProtocol": "-1"
                    }
                ],
            "Tags": [
                {"Key": "minecraft-server", "Value": ""},
                {"Key": "Name", "Value": "minecraft-sg"}
            ]
            }
        },
        "MGMTSG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "allow SSH for remote management",
                "GroupName": "mgmt-sg",
                "VpcId": {"Ref": "VPCID"},
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "22",
                        "ToPort": "22",
                        "IpProtocol": "tcp"
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "127.0.0.1/32",
                        "IpProtocol": "-1"
                    }
                ],
            "Tags": [
                {"Key": "Name", "Value": "mgmt-sg"}
            ]
            }
        },
        "WEBSG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Open web ports to Internet",
                "GroupName": "web-sg",
                "VpcId": {"Ref": "VPCID"},
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "127.0.0.1/32",
                        "IpProtocol": "-1"
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "80",
                        "ToPort": "80",
                        "IpProtocol": "tcp"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "443",
                        "ToPort": "443",
                        "IpProtocol": "tcp"
                    }
                ],
            "Tags": [
                {"Key": "Name", "Value": "web-sg"}
            ]
            }
        },
        "VPCSG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "allow comms inside VPC",
                "GroupName": "vpc-sg",
                "VpcId": {"Ref": "VPCID"},
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "172.31.0.0/16",
                        "IpProtocol": "-1"
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "172.31.0.0/16",
                        "IpProtocol": "-1"
                    }
                ],
            "Tags": [
                {"Key": "Name", "Value": "minecraft-sg"}
            ]
            }
        }
    },
    "Outputs": {
        "MCEBS": {
            "Value": {"Ref": "MCEBS"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-ebs-${AWS::Region}a"}
            }
        },
        "MCENI": {
            "Value": {"Ref": "MCENI"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-eni-${AWS::Region}a"}
            }
        },
        "MCEIP": {
            "Value": {"Ref": "MCEIP"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-eip-${AWS::Region}a"}
            }
        },
        "MCSBT": {
            "Value": {"Ref": "PubSBT"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-sbt"}
            }
        },
        "MCEIPA": {
            "Value": {"Ref": "MCEIPA"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-eipa-${AWS::Region}a"}
            }
        },
        "MCSG": {
            "Value": {"Ref": "MCAppSG"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-mc-sg"}
            }
        },
        "WEBSG": {
            "Value": {"Ref": "WEBSG"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-web-sg"}
            }
        },
        "MGMTSG": {
            "Value": {"Ref": "WEBSG"},
            "Export": {
                "Name": {"Fn::Sub": "${AWS::StackName}-mgmt-sg"}
            }
        }
    }
}